<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:VLCNotAlone"
             xmlns:extensions="clr-namespace:VLCNotAlone.Extensions"
             x:Class="VLCNotAlone.Pages.LogoScreenPage">
    <ContentPage.Content>
        <AbsoluteLayout SizeChanged="OnLayoutSizeChanged">
            <Image Source="{extensions:ImageResource VLCNotAlone.Resources.Images.LogoScreen.OrangeLogo.png}"
                   x:Name="OrangeLogo"
                   VerticalOptions="End" 
                   HorizontalOptions="Center"
                   AbsoluteLayout.LayoutBounds="0.5, 0.5, -1, -1"
                   AbsoluteLayout.LayoutFlags="PositionProportional"/>
            <Image Source="{extensions:ImageResource VLCNotAlone.Resources.Images.LogoScreen.BlueLogo.png}" 
                   x:Name="BlueLogo"
                   VerticalOptions="Start" 
                   HorizontalOptions="Center"
                   IsVisible="false"
                   AbsoluteLayout.LayoutBounds="0.5, 0.5, -1, -1"
                   AbsoluteLayout.LayoutFlags="PositionProportional"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>