<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VLCNotAlone.Pages.DirectConnectPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Text="DirectConnect" VerticalOptions="Center" HorizontalOptions="Center" Grid.Row="0" Grid.ColumnSpan="2"/>
            <Entry x:Name="endPointEntry" Placeholder="ip:port" PlaceholderColor="LightGray" VerticalOptions="Center" HorizontalOptions="Center" Grid.Row="1" Grid.ColumnSpan="2" WidthRequest="200"/>
            <Button Text="Back" VerticalOptions="Center" HorizontalOptions="End" Grid.Row="2" Grid.Column="0" WidthRequest="100" Clicked="OnBackClicked"/>
            <Button Text="Connect" VerticalOptions="Center" HorizontalOptions="Start" Grid.Row="2" Grid.Column="1" WidthRequest="100" Clicked="OnConnectClicked"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>