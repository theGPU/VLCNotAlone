<Window x:Class="VLCNotAlone.PasswordRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VLCNotAlone"
        mc:Ignorable="d"
        Title="Password requester" Height="75" Width="150" ResizeMode="NoResize">
    <Grid Background="#222226">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="PasswordTextBox" Background="#444446" Foreground="White" Grid.Row="0" Text="Enter password here" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Cancel" Height="20" Width="50" Click="OnClickCancelButton"/>
            <Button Grid.Column="1" Content="Ok" Height="20" Width="50" Click="OnClickOkButton"/>
        </Grid>
    </Grid>
</Window>
